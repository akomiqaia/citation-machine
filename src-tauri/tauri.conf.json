{
	"$schema": "../node_modules/@tauri-apps/cli/schema.json",
	"build": {
		"beforeBuildCommand": "npm run build",
		"beforeDevCommand": "npm run dev",
		"devPath": "http://localhost:5173",
		"distDir": "../build"
	},
	"package": {
		"productName": "citation-machine",
		"version": "0.1.0"
	},
	"tauri": {
		"allowlist": {
			"dialog": {
				"open": true,
				"save": true
			},
			"shell": {
				"sidecar": true,
				"scope": [{ "name": "bin/api", "sidecar": true }]
			},
			"http": {
				"all": false,
        "request": true,
        "scope": ["http://localhost:8135/*"]
			},
      "path": {
        "all": true
      },
      "fs": {
        "readFile": true,
        "writeFile": true,
        "scope": ["$RESOURCE/pickle_files/*"]
      }
		},
		"bundle": {
			"active": true,
			"category": "DeveloperTool",
			"copyright": "",
			"deb": {
				"depends": []
			},
			"externalBin": ["bin/api"],
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			],
			"identifier": "citation-machine",
			"longDescription": "",
			"macOS": {
				"entitlements": null,
				"exceptionDomain": "",
				"frameworks": [],
				"providerShortName": null,
				"signingIdentity": null
			},
			"resources": [],
			"shortDescription": "",
			"targets": "all",
			"windows": {
				"certificateThumbprint": null,
				"digestAlgorithm": "sha256",
				"timestampUrl": ""
			}
		},
		"security": {
			"csp": null
		},
		"updater": {
			"active": false
		},
		"windows": [
			{
				"fullscreen": false,
				"height": 600,
				"resizable": true,
				"title": "citation-machine",
				"width": 800
			}
		]
	}
}
